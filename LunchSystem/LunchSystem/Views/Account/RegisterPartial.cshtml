
@using LunchSystem.Models
@model RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "RegisterForm" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.TextBoxFor(model => model.RegisterUsername, null, new { @class = "form-control", autofocus = "autofocus", placeholder = "UserName" })
        @Html.ValidationMessageFor(model => model.RegisterUsername, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(model => model.RegisterPassword, null, new { @class = "form-control", placeholder = "Password", type = "Password" })
        @Html.ValidationMessageFor(model => model.RegisterPassword, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(model => model.VerifyPassword, null, new { @class = "form-control", placeholder = "Password", type = "Password" })
        @Html.ValidationMessageFor(model => model.VerifyPassword, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-success btn-block" id="registerButton" style="margin-bottom: 10px;">Register</button>
}
@if (ViewBag.RegisterMessage != null)
{
    <div class="alert alert-danger" role="alert" id="errorMessage">
        @ViewBag.RegisterMessage
    </div>
}
